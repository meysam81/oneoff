---
import Container from '../ui/Container.astro';
import Icon from '../icons/index.astro';

const platforms = [
  {
    id: 'linux',
    name: 'Linux',
    arch: 'amd64',
    command: 'curl -fsSL https://github.com/meysam81/oneoff/releases/latest/download/oneoff-linux-amd64 -o oneoff && chmod +x oneoff && ./oneoff',
  },
  {
    id: 'macos',
    name: 'macOS',
    arch: 'Apple Silicon',
    command: 'curl -fsSL https://github.com/meysam81/oneoff/releases/latest/download/oneoff-darwin-arm64 -o oneoff && chmod +x oneoff && ./oneoff',
  },
  {
    id: 'windows',
    name: 'Windows',
    arch: 'PowerShell',
    command: 'Invoke-WebRequest -Uri "https://github.com/meysam81/oneoff/releases/latest/download/oneoff-windows-amd64.exe" -OutFile "oneoff.exe"; .\\oneoff.exe',
  },
];
---

<section class="section bg-bg-secondary/30" id="installation">
  <Container size="xl">
    <div class="section-header px-2 sm:px-0">
      <h2 class="section-title text-2xl sm:text-3xl md:text-headline">Up and running in <span class="text-accent-primary">10 seconds</span></h2>
      <p class="section-subtitle text-sm sm:text-base">
        One command. No package managers. No containers. Just download and run.
      </p>
    </div>

    <div class="max-w-3xl mx-auto px-2 sm:px-0">
      <!-- Platform tabs -->
      <div class="flex items-center justify-center gap-1 sm:gap-2 mb-4 sm:mb-6 overflow-x-auto pb-2" id="platform-tabs">
        {platforms.map((platform, index) => (
          <button
            class={`flex-shrink-0 px-3 sm:px-4 py-1.5 sm:py-2 rounded-lg text-xs sm:text-sm font-medium transition-all duration-200 ${
              index === 0
                ? 'bg-bg-tertiary text-accent-primary border border-accent-primary/30'
                : 'text-fg-muted hover:text-fg-secondary hover:bg-bg-tertiary/50'
            }`}
            data-platform={platform.id}
          >
            {platform.name}
            <span class="text-[10px] sm:text-xs text-fg-muted ml-1 hidden xs:inline">({platform.arch})</span>
          </button>
        ))}
      </div>

      <!-- Command display -->
      <div class="terminal-window mb-4 sm:mb-6">
        <div class="terminal-header">
          <div class="flex items-center gap-1.5 sm:gap-2">
            <span class="terminal-dot terminal-dot-red"></span>
            <span class="terminal-dot terminal-dot-yellow"></span>
            <span class="terminal-dot terminal-dot-green"></span>
          </div>
          <span class="text-[10px] sm:text-xs text-fg-muted ml-2 sm:ml-4" id="terminal-title">Terminal</span>
        </div>
        <div class="terminal-body relative group">
          {platforms.map((platform, index) => (
            <div
              class={`platform-command ${index === 0 ? '' : 'hidden'}`}
              data-command={platform.id}
            >
              <code class="text-[10px] sm:text-sm text-fg-secondary break-all leading-relaxed">{platform.command}</code>
            </div>
          ))}

          <!-- Copy button - always visible on mobile -->
          <button
            id="copy-btn"
            class="absolute top-1.5 sm:top-2 right-1.5 sm:right-2 p-1.5 sm:p-2 bg-bg-tertiary rounded-lg text-fg-muted hover:text-fg-primary sm:opacity-0 sm:group-hover:opacity-100 sm:invisible sm:group-hover:visible transition-all duration-200"
            title="Copy to clipboard"
            aria-label="Copy installation command to clipboard"
          >
            <Icon name="copy" size={14} class="sm:w-4 sm:h-4" />
          </button>
        </div>
      </div>

      <!-- Copy feedback -->
      <div id="copy-feedback" class="hidden text-center text-xs sm:text-sm text-success mb-4 sm:mb-6">
        <Icon name="check" size={14} class="inline mr-1 sm:w-4 sm:h-4" />
        Copied to clipboard!
      </div>

      <!-- Additional links -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-3 sm:gap-4 text-xs sm:text-sm">
        <a
          href="https://github.com/meysam81/oneoff/releases"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-1.5 sm:gap-2 text-fg-secondary hover:text-accent-primary transition-colors"
        >
          <Icon name="external" size={14} class="sm:w-4 sm:h-4" />
          View all releases
        </a>
        <span class="text-fg-muted hidden sm:inline">|</span>
        <a
          href="https://github.com/meysam81/oneoff#installation"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-1.5 sm:gap-2 text-fg-secondary hover:text-accent-primary transition-colors"
        >
          <Icon name="github" size={14} class="sm:w-4 sm:h-4" />
          Installation docs
        </a>
      </div>
    </div>
  </Container>
</section>

<script>
  const platformTabs = document.querySelectorAll('[data-platform]');
  const platformCommands = document.querySelectorAll('[data-command]');
  const copyBtn = document.getElementById('copy-btn');
  const copyFeedback = document.getElementById('copy-feedback');

  let currentPlatform = 'linux';

  const commands: Record<string, string> = {
    linux: 'curl -fsSL https://github.com/meysam81/oneoff/releases/latest/download/oneoff-linux-amd64 -o oneoff && chmod +x oneoff && ./oneoff',
    macos: 'curl -fsSL https://github.com/meysam81/oneoff/releases/latest/download/oneoff-darwin-arm64 -o oneoff && chmod +x oneoff && ./oneoff',
    windows: 'Invoke-WebRequest -Uri "https://github.com/meysam81/oneoff/releases/latest/download/oneoff-windows-amd64.exe" -OutFile "oneoff.exe"; .\\oneoff.exe',
  };

  platformTabs.forEach(tab => {
    tab.addEventListener('click', () => {
      const platform = tab.getAttribute('data-platform');
      if (!platform) return;

      currentPlatform = platform;

      // Update tab styles
      platformTabs.forEach(t => {
        t.classList.remove('bg-bg-tertiary', 'text-accent-primary', 'border', 'border-accent-primary/30');
        t.classList.add('text-fg-muted', 'hover:text-fg-secondary', 'hover:bg-bg-tertiary/50');
      });
      tab.classList.remove('text-fg-muted', 'hover:text-fg-secondary', 'hover:bg-bg-tertiary/50');
      tab.classList.add('bg-bg-tertiary', 'text-accent-primary', 'border', 'border-accent-primary/30');

      // Show/hide commands
      platformCommands.forEach(cmd => {
        if (cmd.getAttribute('data-command') === platform) {
          cmd.classList.remove('hidden');
        } else {
          cmd.classList.add('hidden');
        }
      });
    });
  });

  // Copy to clipboard
  copyBtn?.addEventListener('click', async () => {
    const command = commands[currentPlatform];
    try {
      await navigator.clipboard.writeText(command);
      copyFeedback?.classList.remove('hidden');
      setTimeout(() => {
        copyFeedback?.classList.add('hidden');
      }, 2000);
    } catch (err) {
      console.error('Failed to copy:', err);
    }
  });
</script>
