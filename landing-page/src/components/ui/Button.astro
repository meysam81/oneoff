---
interface Props {
  variant?: 'primary' | 'secondary' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  external?: boolean;
  class?: string;
}

const {
  variant = 'primary',
  size = 'md',
  href,
  external = false,
  class: className = '',
} = Astro.props;

const baseClasses = 'inline-flex items-center justify-center gap-2 font-medium rounded-lg transition-all duration-200 focus-ring';

const variantClasses = {
  primary: 'bg-accent-primary text-bg-primary hover:bg-accent-secondary shadow-glow hover:shadow-glow-lg',
  secondary: 'bg-transparent text-fg-primary border border-border-default hover:border-accent-primary/50 hover:text-accent-primary',
  ghost: 'bg-transparent text-fg-secondary hover:text-fg-primary hover:bg-bg-tertiary',
};

const sizeClasses = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3 text-base',
  lg: 'px-8 py-4 text-lg',
};

const classes = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${className}`;

const Tag = href ? 'a' : 'button';
const externalProps = external ? { target: '_blank', rel: 'noopener noreferrer' } : {};
---

{href ? (
  <a href={href} class={classes} {...externalProps}>
    <slot />
  </a>
) : (
  <button class={classes}>
    <slot />
  </button>
)}
