{
  "author": {
    "github": "meysam81",
    "name": "Example Contributor"
  },
  "category": "cicd",
  "created_at": "2025-01-17",
  "description": "Trigger a webhook when a new release is published. Perfect for CI/CD pipelines, deployment automation, or team notifications.",
  "id": "github-release-notify",
  "job": {
    "config": {
      "body": "{\"event\": \"release\", \"repository\": \"${REPO_NAME}\", \"version\": \"${VERSION}\", \"timestamp\": \"${TIMESTAMP}\"}",
      "headers": {
        "Authorization": "Bearer ${WEBHOOK_TOKEN}",
        "Content-Type": "application/json"
      },
      "method": "POST",
      "timeout": 15,
      "url": "${WEBHOOK_URL}"
    },
    "type": "http"
  },
  "name": "GitHub Release Notification",
  "tags": [
    "github",
    "release",
    "ci-cd",
    "webhook",
    "automation"
  ]
}
